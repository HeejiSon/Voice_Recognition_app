<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".category_menu"
    android:padding="30dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카테고리"
        android:textAlignment="center"
        android:textColor="#ff7F00"
        android:textSize="60dp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/coffee_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="커피"
                    android:textSize="60dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/latte_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="라떼"
                    android:textSize="60dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/ade_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="에이드"
                    android:textSize="60dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/smoothie_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="스무디"
                    android:textSize="60dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tea_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="차"
                    android:textSize="60dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"/>`


                <TextView
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="원하시는 메뉴의 카테고리를 선택해주세요. 커피, 라떼, 에이드, 스무디, 차 카테고리가 있습니다."
                    android:textColor="@color/white"
                    android:textSize="2dp" />

            </LinearLayout>

        </ScrollView>
    </FrameLayout>

</LinearLayout>